<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for logging to console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender for academic_curriculum-service -->
    <appender name="SCHEDULE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/schedule-service.log</file>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for schedule-service -->
    <logger name="microservice.schedule_service" level="info">
        <appender-ref ref="SCHEDULE_FILE"/>
    </logger>

    <!-- Root logger configuration -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
